<% layout("layouts/boilerplate") %>

<div class="container">
  <br>
  <h2>Search Results</h2>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% if (allListings && allListings.length) { %>
      <% allListings.forEach(listing => { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card col">
            <img class="card-img-top" src="<%= listing.image.url %>" alt="<%= listing.title %>">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <h5 class="card-title"><b><%= listing.title %></b></h5>
              <p class="card-text">
                &#8377;<%= listing.price.toLocaleString("en-IN") %> per night
              </p>
            </div>
          </div>
        </a>
      <% }) %>
    <% } else { %>
      <div class="col-12">
        <p>No listings found matching your search criteria.</p>
      </div>
    <% } %>
  </div>
</div>
